cyware-polarproxy-source:
  file.managed:
    - name: /usr/local/src/cyware/files/PolarProxy_1-0-0_linux-x64.tar.gz
    - source: https://download.netresec.com/polarproxy/PolarProxy_1-0-0_linux-x64.tar.gz
    - source_hash: sha256=25644b4104bca7f1a330ea26d9f55985cd56bedef6d08dfc3dc0d147c03298c5
    - makedirs: True
    - replace: False

cyware-polarproxy-archive:
  archive.extracted:
    - name: /usr/local/polarproxy/
    - source: /usr/local/src/cyware/files/PolarProxy_1-0-0_linux-x64.tar.gz
    - enforce_toplevel: False
    - force: true
    - watch:
      - file: cyware-polarproxy-source

/usr/local/polarproxy/PolarProxy:
  file.managed:
    - mode: 755
    - replace: False
    - watch:
      - archive: cyware-polarproxy-archive

cyware-polarproxy-wrapper:
  file.managed:
    - name: /usr/local/bin/polarproxy
    - mode: 755
    - replace: False
    - watch:
      - file: /usr/local/polarproxy/PolarProxy
    - contents:
      - '#!/bin/bash'
      - /usr/local/polarproxy/PolarProxy ${*}
